<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img
      class="profile-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
    />
    <div class="header-fields">
      <h1 class="charname"><input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="Nome do Equipamento"
        /></h1>
    </div>
  </header>

  {{! CORPO DA FICHA }}
  <section class="sheet-body">
    <div class="grid grid-3col">
      <div class="resource flex-group-center">
        <label class="resource-label">Quantidade</label>
        <input
          type="text"
          name="system.quantidade"
          value="{{system.quantidade}}"
          data-dtype="Number"
        />
      </div>

      <div class="resource flex-group-center">
        <label class="resource-label">Peso (kg)</label>
        <input
          type="text"
          name="system.peso"
          value="{{system.peso}}"
          data-dtype="Number"
        />
      </div>

      <div class="resource flex-group-center">
        <label class="resource-label">Preço (PO)</label>
        <input
          type="text"
          name="system.preco"
          value="{{system.preco}}"
          data-dtype="Number"
        />
      </div>
    </div>

    <hr />

    {{! ÁREA DE DESCRIÇÃO }}
    <h3>Descrição</h3>
    <div class="editor-box">
      {{editor
        system.description
        target="system.description"
        rollData=rollData
        button=true
        owner=owner
        editable=editable
      }}
    </div>
  </section>
</form>